{
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"target": "ES6",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"stripInternal": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"lib": ["esnext", "dom", "dom.iterable"],
		"rootDir": "src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
